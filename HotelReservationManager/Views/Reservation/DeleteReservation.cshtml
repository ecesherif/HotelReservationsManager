@model HotelReservationManager.Data.Models.Reservation

@{
    ViewData["Title"] = "Delete Reservation";
}

<h1>Delete Reservation</h1>

<h3>Are you sure you want to delete this reservation?</h3>
<p><strong>Room:</strong> @Model.Room.Number</p>
<p><strong>Check-in Time:</strong> @Model.CheckInTime</p>
<p><strong>Check-out Time:</strong> @Model.CheckOutTime</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Reservation")" class="btn btn-secondary">Cancel</a>
</form>
