@model HotelReservationManager.Models.Reservation.EditReservationViewModel

@{
    ViewData["Title"] = "Edit Reservation";
}

<h1>Edit Reservation</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="CheckInTime">Check-in Time</label>
        <input asp-for="CheckInTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="CheckInTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CheckOutTime">Check-out Time</label>
        <input asp-for="CheckOutTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="CheckOutTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomId">Room</label>
        <select asp-for="RoomId" asp-items="@(new SelectList(Model.AvaiableRooms, "Id", "Number"))" class="form-control"></select>
        <span asp-validation-for="RoomId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClientIds">Clients</label>
        <select asp-for="ClientIds" asp-items="@(new SelectList(Model.AvaiableClients, "Id", "FullName"))" multiple="multiple" class="form-control"></select>
        <span asp-validation-for="ClientIds" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Breakfast">Breakfast</label>
        <input asp-for="Breakfast" class="form-control" type="checkbox" />
    </div>

    <div class="form-group">
        <label asp-for="AllInclusive">All Inclusive</label>
        <input asp-for="AllInclusive" class="form-control" type="checkbox" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="@Url.Action("Index", "Reservation")" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
