@model HotelReservationManager.Models.Room.EditRoomViewModel

@{
    ViewData["Title"] = "Edit Room";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Number"></label>
        <input asp-for="Number" class="form-control" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Capacity"></label>
        <input asp-for="Capacity" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PriceAdult"></label>
        <input asp-for="PriceAdult" class="form-control" />
        <span asp-validation-for="PriceAdult" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PriceKid"></label>
        <input asp-for="PriceKid" class="form-control" />
        <span asp-validation-for="PriceKid" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Free"></label>
        <input asp-for="Free" class="form-check-input" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
