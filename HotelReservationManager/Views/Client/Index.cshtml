@model IEnumerable<HotelReservationManager.Data.Models.Client>

@{
    ViewData["Title"] = "Clients";
}


<p>
    <h1>Clients</h1>
    <a asp-action="Create" class="btn btn-success active">Create New</a>
</p>
<table class="table table-striped table-hover" id="clientTable" style="width: 100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mature)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(item.FirstName + " " + item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @(item.Mature ? "Adult" : "Child")
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary active">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info active">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger active">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#clientTable').DataTable({
                'lengthMenu': [10, 25, 50],
                'columns': [null, null, null, null, {
                    'searchable': false,
                    'orderable': false
                }]
            });
        });
    </script>
}