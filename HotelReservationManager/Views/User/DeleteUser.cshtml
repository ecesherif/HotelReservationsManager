@model HotelReservationManager.Data.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete the following user?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Username</dt>
        <dd class="col-sm-10">@Model.UserName</dd>

        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Second Name</dt>
        <dd class="col-sm-10">@Model.SecondName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">EGN</dt>
        <dd class="col-sm-10">@Model.EGN</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Active</dt>
        <dd class="col-sm-10">@Model.Active</dd>
    </dl>
</div>

<form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "User")" class="btn btn-secondary">Cancel</a>
</form>
