@model HotelReservationManager.Models.User.DetailsUserViewModel

@{
    ViewData["Title"] = "User Details";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-header">
        <h5>User Information</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Full Name:</dt>
            <dd class="col-sm-9">@Model.FirstName @Model.SecondName @Model.LastName</dd>

            <dt class="col-sm-3">User Name:</dt>
            <dd class="col-sm-9">@Model.UserName</dd>

            <dt class="col-sm-3">Email:</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">EGN:</dt>
            <dd class="col-sm-9">@Model.EGN</dd>

            <dt class="col-sm-3">Phone Number:</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>
        </dl>
    </div>
    <div class="card-footer text-right">
        <a class="btn btn-primary" asp-controller="User" asp-action="Edit" asp-route-id="@Model.UserName">Edit</a>
        <a class="btn btn-danger" asp-controller="User" asp-action="Delete" asp-route-id="@Model.UserName">Delete</a>
    </div>
</div>
