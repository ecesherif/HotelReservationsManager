@model IEnumerable<HotelReservationManager.Data.Models.User>

@{
    ViewData["Title"] = "Users";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>
                    <a href="@Url.Action("Details", "User", new { id = user.Id })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Edit", "User", new { id = user.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "User", new { id = user.Id })" class="btn btn-danger">Delete</a>
                    @if (user.Active)
                    {
                        <a href="@Url.Action("TogleActivity", "User", new { id = user.Id })" class="btn btn-secondary">Deactivate</a>
                    }
                    else
                    {
                        <a href="@Url.Action("TogleActivity", "User", new { id = user.Id })" class="btn btn-success">Activate</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "User")" class="btn btn-primary">Create New User</a>
