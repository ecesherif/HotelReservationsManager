@* Views/User/Index.cshtml *@
@model IEnumerable<HotelReservationManager.Data.Models.User>

@{
    ViewData["Title"] = "Users";
}

<h2>Users</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Create New User</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Second Name</th>
            <th>Last Name</th>
            <th>EGN</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Active</th>
            <th>Hire Time</th>
            <th>Fire Time</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.SecondName</td>
                <td>@user.LastName</td>
                <td>@user.EGN</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@(user.Active ? "Yes" : "No")</td>
                <td>@user.HireTime.ToString("g")</td>
                <td>@user.FireTime?.ToString("g")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                    <a asp-action="TogleActivity" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Toggle Activity</a>
                </td>
            </tr>
        }
    </tbody>
</table>
