@* Views/User/Delete.cshtml *@
@model HotelReservationManager.Data.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<h2>Delete User</h2>

<h4>Are you sure you want to delete this user?</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Second Name</dt>
        <dd class="col-sm-10">@Model.SecondName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">EGN</dt>
        <dd class="col-sm-10">@Model.EGN</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Active</dt>
        <dd class="col-sm-10">@(Model.Active ? "Yes" : "No")</dd>

        <dt class="col-sm-2">Hire Time</dt>
        <dd class="col-sm-10">@Model.HireTime.ToString("g")</dd>

        <dt class="col-sm-2">Fire Time</dt>
        <dd class="col-sm-10">@Model.FireTime?.ToString("g")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

